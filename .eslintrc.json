{
    "env": {
        "es2021": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {}
    },
    "ignorePatterns": ["build/**", "build-dev/**"],
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "indent": ["error", 2],
        "quotes": 2,
        "semi": 2,
        "comma-dangle": 2,
        "arrow-parens": 2,
        "no-trailing-spaces": 2,
        "require-await": 2,
        "no-undef": "off", // cloudflare workers
        "no-console": 2
    }
}